module purge
module load git/2.21.0

# Specify compiler (gfortran, ifort, pgf90):
export FC=gfortran

if [ $FC = 'ifort' ]; then
    module load intel/2019.u3
    export FC=ifort
elif [ $FC = 'pgf90' ]; then
    module load pgf/19.1
    export FC=pgf90
else
    module load gcc/9.1.0
    export FC=gfortran
fi

module load szip/2.1.1
module load curl/7.59.0
module load hdf/4.2.14
module load hdf5-serial/1.10.5
module load netcdf-c/4.6.3
module load netcdf-fortran/4.4.5
export NETCDFLIB=$NETCDF_FORTRAN_HOME
export NETCDFINC=$NETCDF_FORTRAN_HOME
